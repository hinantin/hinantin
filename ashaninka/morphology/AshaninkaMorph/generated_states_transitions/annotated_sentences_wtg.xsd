            <xs:enumeration value="3m.O"/>
            <xs:enumeration value="3nm.O"/>
                        
            <!-- Noun slot prefix 1 -->
            <xs:enumeration value="1SG.poss"/>
            <xs:enumeration value="2SG.poss"/>
            <xs:enumeration value="3SGm.poss"/>
            <xs:enumeration value="3SGnm.poss"/>
            <xs:enumeration value="1PL.poss"/>
