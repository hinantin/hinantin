            <!-- New lexicon entries for lexical database -->
            
            <!-- Verb slot prefix 1 -->
            <xs:enumeration value="1SG.S"/>
            <xs:enumeration value="2SG.S"/>
            <xs:enumeration value="3SGm.S"/>
            <xs:enumeration value="3SGnm.S"/>
